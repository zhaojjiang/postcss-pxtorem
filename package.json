{
  "name": "@zhaojjiang/postcss-pxtorem",
  "description": "A CSS post-processor that converts px to rem.",
  "version": "6.2.1",
  "author": "zhaojjiang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:zhaojjiang/postcss-pxtorem.git"
  },
  "bugs": "https://github.com/zhaojjiang/postcss-pxtorem/issues",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write **/*.js",
    "test": "jasmine-node test"
  },
  "files": [
    "src/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jasmine-node": "^1.16.0",
    "lint-staged": "^10.0.8",
    "postcss": "^8.0.0",
    "prettier": "^1.19.1"
  },
  "keywords": [
    "css",
    "rem",
    "pixel",
    "px",
    "postcss",
    "postcss-plugin"
  ],
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
